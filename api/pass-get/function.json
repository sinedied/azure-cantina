{
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": ["get"],
      "route": "events/{eventId}/pass"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "$return"
    },
    {
      "type": "cosmosDB",
      "name": "event",
      "databaseName": "cantinadb",
      "collectionName": "events",
      "connectionStringSetting": "CosmosDBConnectionString",
      "direction": "in",
      "id": "{eventId}",
      "PartitionKey": "{eventId}"
    },
    {
      "type": "cosmosDB",
      "name": "updatedEvent",
      "databaseName": "cantinadb",
      "collectionName": "events",
      "connectionStringSetting": "CosmosDBConnectionString",
      "direction": "out"
    }
  ]
}
