{
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": ["post"],
      "route": "events"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "$return"
    },
    {
      "type": "cosmosDB",
      "name": "event",
      "databaseName": "CosmosDBDatabaseName",
      "collectionName": "events",
      "connectionStringSetting": "CosmosDBConnectionString",
      "direction": "in",
      "id": "{id}",
      "PartitionKey": "{id}"
    },
    {
      "type": "cosmosDB",
      "name": "newEvent",
      "databaseName": "CosmosDBDatabaseName",
      "collectionName": "events",
      "connectionStringSetting": "CosmosDBConnectionString",
      "direction": "out"
    }
  ]
}
